<meta property="projectId" content="<%= @project.id %>">
<meta property="projectTempo" content="<%= @project.tempo %>">
<meta property="currentBranchId" content="<%= @current_branch.id %>">
<meta property="currentCommitId" content="<%= @current_commit_id %>">
<div class="page_div">
  <container class="col-md-12">
      <div class="main_container">
      <%= render 'project_header' %>
        <%= render 'project_player' %> 
          <table>
            <tr>
              <td class="col-md-1 control_spans_row">
                <span class="controls_span">Transport</span>
              </td>
              <td class="col-md-1 control_spans_row">
                <span class="controls_span">Commit</span>
              </td>
              <td class="col-md-1 control_spans_row">
                <span class="branches_span">
                Branch:
                 <%= @current_branch.branch_name.titleize %>
                </span>
              </td>
            </tr>
            <tr>
              <td class="col-md-1 control_spans_row">
                <%= render 'player_transport' %> 
              </td>
              <td class="col-md-1 control_spans_row  ">
                <%= render 'project_management' %>  
              </td>
              <td class="col-md-1 control_spans_row  ">
                <%= render 'project_branches_nav' %>
              </td>
            </tr>
            <tr>
              <td class="col-md-1 control_spans_row  "></td>
              <td class="col-md-1 control_spans_row  "><input type="text" class="form-control" id="commit_comments" placeholder="Comments... "></td>
              <td class="col-md-1 control_spans_row  "></td>
            </tr>
          </table>
      </div>
  </container>
</div>